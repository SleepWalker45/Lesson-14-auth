{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<div class="page page--background">
    <header>
        {{> back-button}}  
    </header>

    <form class="page__section">
        <h1 class="page__title">Регистрация</h1>
        
        <div class="form">
            <div class="form__item">
                {{> field action='signupForm.change' type='email' name='email' label='Эл.Адрес' placeholder='Ваш Эл.Адрес'}}
                <span name='email' class="form__error">Ошибка</span>
            </div>

            <div class="form__item">
                {{> field-password action='signupForm.change' name='password' label='Пароль' placeholder='Пароль'}}
                <span name='password' class="form__error">Ошибка</span>
            </div>

            <div class="form__item">
                {{> field-password action='signupForm.change' name='passwordAgain' label='Пароль ещё раз' placeholder='Пароль'}}
                <span name="passwordAgain" class="form__error">Ошибка</span>
            </div>

            <div class="form__item">
                {{> field-select action='signupForm.change' name='role' label='Роль' placeholder='Выберите роль' list=data.role}}
                <span name="role" class="form__error">Ошибка</span>
            </div>

            <div class="form__item">
                {{> field-checkbox action='signupForm.change' name='isConfirm' label='Вы согласны с правилами сервиса'}}
                <span name="isConfirm" class="form__error">Ошибка</span>
            </div>
        </div>

        <button onclick="signupForm.submit()" class="button button--disabled" type="button">Зарегистрироваться</button>

        <span class="alert alert--disabled">Внимание, ошибка!</span>
    </form>
</div>

